<div class="card-wrapper">
<h2>ログイン</h2>

<% if alert %>
  <p class='alert alert-danger'><%= alert %></p>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="nav_description">
    新規会員登録は<%= link_to "こちらから", new_registration_path(resource_name) %>！<br />
  </div>
<% end -%>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div>
    <%= f.email_field :email, autofocus: true, placeholder: 'メールアドレス', :class => "register_form" %>
  </div>

  <div>
    <%= f.password_field :password, autocomplete: 'off', placeholder: 'パスワード', :class => "register_form" %>
  </div>

  <br />

  <% if devise_mapping.rememberable? %>
    <div class='checkbox'>
      <label>
        <input id='user_remember_me' name='user[remember_me]' type='checkbox' value='1'>
        <%= f.label :ログイン情報を保存する, class: 'memory-check' %>
      </label>
    </div>
  <% end %>

  <div>
    <%= f.submit class: 'btn btn-primary withripple', value: 'ログイン' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>