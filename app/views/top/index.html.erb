<div id="wrapper">
  <div id="columns">
    <% @contents.each do |content| %>
      <div class="content">
        <a href="/contents/<%= content.id %>">
          <%= image_tag content.main_creative %>
          <h2 title="<%= content.title %>"><%= content.title %></h2>
        </a>
        <p id="small"><%= content.description[1..60] %>...</p>
        <p id="date"><%= content.updated_at.strftime("%Y/%m/%d") %></p>
      </div>
    <% end %>
  </div>
</div>

<center><%= paginate(@contents) %></center>