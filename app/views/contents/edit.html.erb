<%= form_for @content, :url => {:action => 'update'}, :html => {:multiple => true} do |f| %>
  <h3>編集する</h3>
  <%= f.label :title, "タイトル(40文字まで)", :class => "form_label" %><br />
  <%= f.text_area :title, :placeholder => "#{@content.title}", :maxlength => "40", :class => "title_form" %>
  <br />
  <%= f.label :description, "説明", :class => "form_label" %><br />
  <%= f.text_area :description, :placeholder => "#{@content.description}", :class => "description_form" %><br />
  <%= f.label :main_creative, "メイン画像", :class => "form_label" %><br>
  <small>メインとなる画像を1枚アップロードしてください</small><br>
  <%= f.file_field :main_creative %><br><br>
  <%= f.label :thumbnails, "画像", :class => "form_label2" %><br />
    <div class="swiper-container">
      <div class="swiper-wrapper">
        <%= f.fields_for :thumbnails do |thumbnail| %>
          <div class="swiper-slide">
            <% if f.creative? %>
              <%= image_tag f.creative %><br>
              <label>
                <%= f.check_box :remove_image %>
                画像を削除<br>
              </label>
            <% end %>
            <% if f.caption? %>
              <%= thumbnail.label :caption, "画像の説明", :class => "form_label" %><br />
              <%= thumbnail.text_area :caption, :placeholder => "#{@thumbnails.caption}", :class => "caption_form" %><br />
            <% end %>
          </div>
          <%= thumbnail.label :creative, "投稿する", :class => "form_label" %><br>
          <%= thumbnail.file_field :creative %><br />
          <%= thumbnail.label :caption, "画像の説明", :class => "form_label" %><br />
          <%= thumbnail.text_area :caption, :class => "caption_form" %><br />
    <% end %>
  <br />
  <%= f.submit "投稿する", :class => "submit_btn" %>
<% end %>