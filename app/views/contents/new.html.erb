<%= form_for @content, :html => {:multiple => true} do |f| %>

  <%= f.label :title, "タイトル(40文字まで)", :class => "form_label" %><br />
  <%= f.text_area :title, :maxlength => "40", :class => "title_form" %>
  <br />
  <%= f.label :description, "説明", :class => "form_label" %><br />
  <%= f.text_area :description, :class => "description_form" %><br />
  <%= f.label :main_creative, "メイン画像", :class => "form_label" %><br>
  <p id="small">メインとなる画像を1枚アップロードしてください</p><br>
  <%= f.file_field :main_creative, :class => "thumbnails_btn" %><br><br>
    <%= f.fields_for :thumbnails do |thumbnail| %>
      <%= thumbnail.label :creative, "キャプチャ", :class => "form_label" %><br>
      <%= thumbnail.file_field :creative ,:class => "thumbnails_btn" %><br />
      <%= thumbnail.label :caption, "画像の説明", :class => "form_label" %><br />
      <%= thumbnail.text_area :caption, :class => "caption_form" %><br />
    <% end %>
  <br />
  <%= f.submit "投稿する", :class => "submit_btn" %>

<% end %>