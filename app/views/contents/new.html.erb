<div class="card-wrapper">
<%= form_for @content, :html => {:multiple => true} do |f| %>
  <h3>ギャラリーをつくろう！</h3>
  <%= f.text_area :title, :maxlength => "40", :placeholder => "タイトル（40文字以内）", :class => "title_form" %>
  <br />
  <%= f.text_area :description, :placeholder => "このギャラリーについて", :class => "description_form" %><br />
  <%= f.label :main_creative, "メインキャプチャ", :class => "form_label" %><br>
  <%= f.file_field :main_creative, :class => "thumbnails_btn" %><br><br>
  <p class="form_label">キャプチャ</p>
    <%= f.fields_for :thumbnails do |thumbnail| %>
      <%= thumbnail.file_field :creative ,:class => "thumbnails_btn" %><br />
      <%= thumbnail.text_area :caption,:placeholder => "キャプチャの説明", :class => "caption_form" %><br />
    <% end %>
  <br />
  <div class="button_wrapper">
    <%= f.submit "投稿する", :class => "submit_btn" %>
  </div>
<% end %>
</div>