<%= form_for @content do |f| %>

  <%= f.label :title, "タイトル" %><br />
  <%= f.text_area :title %>
  <br />
  <%= f.label :description, "説明" %><br />
  <%= f.text_area :description %><br />
  <%= f.label :image , "画像" %><br />
  <%= f.file_field :image %>
  <%= f.hidden_field :image_cache %>
  <br />

  <%= f.submit "投稿する" %>
<% end %>